{
    "name" : "BigBlueButton Screenshare Extension pour TicFP",
    "author": "BigBlueButton",
    "version" : "0.0.6",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "Chrome Extension granting WebRTC screen capturing capabilities to BigBlueButton meetings.",
    "homepage_url": "https://www.ticfp.qc.ca/",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": true
    },
    "externally_connectable": {
       "matches": [
           "*://*.ticfp.qc.ca/*"
         ]
    },
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}

